{
  "name": "mydiary",
  "version": "1.0.0",
  "description": "An online journal where users can pen down their thoughts and feelings.",
  "main": "index.js",
  "scripts": {
    "start": "set DEBUG=index && nodemon server/index.js",
    "lint": "eslint server/index.js",
    "test": "mocha --reporter progress ./server/tests/testSetup.js \"UI/**/*.test.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ktrixs/MyDiary.git"
  },
  "author": "Ktrixs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ktrixs/MyDiary/issues"
  },
  "homepage": "https://github.com/ktrixs/MyDiary#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "debug": "^4.1.1",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "delay": 2500,
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    }
  }
}
